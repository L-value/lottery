<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lottery.PaymentActivity" >

   <LinearLayout
          android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title" >

        
        <ImageView
            android:id="@+id/back"
            android:background="@drawable/iconfont_fanhui"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="3" />


        <TextView
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:text="我的投注记录"
            android:id="@+id/num"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" />
            <ImageView    
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="3" />
    </LinearLayout>
 <com.example.myviews.PullToRefreshLayout
        android:id="@+id/list_payment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#383838" >

        <include layout="@layout/list_refresh_head" />

        <include layout="@layout/list_refresh_view" />

        <include layout="@layout/list_load_more" />
    </com.example.myviews.PullToRefreshLayout>
</LinearLayout>
