<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gary"
    android:orientation="vertical" >
 <LinearLayout
           android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title" >

        <ImageView
            android:id="@+id/back"
            android:background="@drawable/iconfont_fanhui"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
    
            android:text="帮助 "
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="3" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/help_01" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" 
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:text="登录注册"
                        android:textSize="18dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="top|center"
                        android:text="方便你的使用更安全放心"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" >
                
              
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" 
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:text="操作简单"
                        android:textSize="18dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="top|center"
                        android:text="直接点击你想选的号码"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                  <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/help_02" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" >
                    <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/help_03" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" 
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:text="充值方便"
                        android:textSize="18dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="top|center"
                        android:text="充值或体现操作简单"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" >
                

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" 
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:text="用户中心"
                        android:textSize="18dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="top|center"
                        android:text="查询设置一目了然"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                  <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/help_04" />
            </LinearLayout>
               <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" >
                 <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/help_05" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" 
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:text="玩法多样"
                        android:textSize="18dp" />

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:gravity="top|center"
                        android:text="选择你喜欢的方案"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>
                 
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>