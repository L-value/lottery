<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.lottery.WinHistoryActivity" >
    	<LinearLayout
    	       android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@drawable/iconfont_fanhui" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="历届中奖信息 "
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="3" />
    </LinearLayout>
    
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/spinner_linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
           

            <LinearLayout
                android:id="@+id/spinner_surgery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:showDividers="none"
                android:orientation="horizontal"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/spinner_surgery_text"
                    android:text="按时间"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/spinner_surgery_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_up_black"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/spinner_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:showDividers="none"
                android:orientation="horizontal"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/spinner_title_text"
                    android:text="按玩法"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/spinner_title_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_up_black"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    />

            </LinearLayout>

        </LinearLayout>
  <com.example.myviews.PullToRefreshLayout
        android:id="@+id/list_win"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#383838" >

        <include layout="@layout/list_refresh_head" />

        <include layout="@layout/list_refresh_view" />

        <include layout="@layout/list_load_more" />
    </com.example.myviews.PullToRefreshLayout>
    </LinearLayout>
</LinearLayout>